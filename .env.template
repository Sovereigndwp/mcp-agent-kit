# MCP Bitcoin Education Agent - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# API KEYS (Optional - some features may be limited without them)
# =============================================================================

# Twitter API - For real-time Bitcoin news and engagement monitoring
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# GitHub API - For Bitcoin Core development tracking
GITHUB_API_TOKEN=your_github_token_here

# Bitcoin Data APIs
MEMPOOL_API_KEY=your_mempool_api_key_here
COINMETRICS_API_KEY=your_coinmetrics_api_key_here
COINDESK_API_KEY=your_coindesk_api_key_here

# Alternative Bitcoin APIs (choose based on preference)
BLOCKCHAIN_INFO_API_KEY=your_blockchain_info_api_key_here
LIGHTNING_NETWORK_API_KEY=your_1ml_api_key_here

# =============================================================================
# AUTHENTICATION & SECURITY (Recommended for production)
# =============================================================================

# Enable authentication between agents
MCP_AUTH_ENABLED=true

# Secret key for JWT tokens (minimum 32 characters)
MCP_SECRET_KEY=your_secret_key_here_minimum_32_characters_long_please_generate_random

# Token expiry in seconds (3600 = 1 hour)
MCP_TOKEN_EXPIRY=3600

# =============================================================================
# RATE LIMITING (Optional - defaults provided)
# =============================================================================

# Global rate limits
MCP_RATE_LIMIT_GLOBAL=1000
MCP_RATE_LIMIT_AGENT=100
MCP_RATE_LIMIT_EXTERNAL=50

# Rate limit windows in milliseconds
MCP_RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# BITCOIN EDUCATION SETTINGS
# =============================================================================

# Your brand colors (hex codes)
BRAND_PRIMARY_COLOR=#FF8C00
BRAND_SECONDARY_COLOR=#FFD700
BRAND_BACKGROUND_COLOR=#000000

# Educational philosophy settings
DISCOVERY_BASED_LEARNING=true
SOCRATIC_METHOD_ENABLED=true
QUESTION_FIRST_APPROACH=true

# Partner Integration Settings
MI_PRIMER_BITCOIN_ENABLED=true
BITCOIN_DIPLOMA_ENABLED=true
LOOKING_GLASS_EDUCATION_ENABLED=true
BITCOIN_ADVISER_ENABLED=true
LEARN_ME_BITCOIN_ENABLED=true

# =============================================================================
# PLATFORM SETTINGS
# =============================================================================

# Primary social media platform
PRIMARY_PLATFORM=twitter

# Platform-specific settings
TWITTER_ENGAGEMENT_TARGET=5
SUBSTACK_FREQUENCY=weekly
NOSTR_EXPERIMENTAL=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Error reporting
ERROR_REPORTING=true

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment mode
NODE_ENV=development

# Server port (if running web interface)
PORT=3000

# =============================================================================
# CONTENT ANALYSIS SETTINGS
# =============================================================================

# Content authenticity thresholds
AUTHENTICITY_THRESHOLD=70
BRAND_ALIGNMENT_THRESHOLD=75
AI_DETECTION_SENSITIVITY=high

# Content optimization settings
AUTO_OPTIMIZE_CONTENT=true
CROSS_PLATFORM_ADAPTATION=true

# =============================================================================
# BITCOIN DATA SETTINGS
# =============================================================================

# Data refresh intervals (in milliseconds)
PRICE_DATA_REFRESH=60000
MEMPOOL_DATA_REFRESH=30000
LIGHTNING_DATA_REFRESH=300000
NEWS_DATA_REFRESH=300000

# Data validation settings
STRICT_BITCOIN_VALIDATION=true
VALIDATE_ADDRESSES=true
VALIDATE_AMOUNTS=true

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Webhook URLs (optional)
WEBHOOK_CONTENT_ANALYSIS=
WEBHOOK_NEWS_ALERTS=
WEBHOOK_MARKET_ALERTS=

# External service timeouts (milliseconds)
EXTERNAL_API_TIMEOUT=30000
BITCOIN_NODE_TIMEOUT=10000

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Enable caching
CACHE_ENABLED=true

# Cache TTL (time to live) in seconds
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# =============================================================================
# DEVELOPMENT SETTINGS (Development/Testing only)
# =============================================================================

# Debug mode
DEBUG_MODE=false

# Mock external APIs (for testing without API keys)
MOCK_EXTERNAL_APIS=false

# Simulate Bitcoin data (for testing)
SIMULATE_BITCOIN_DATA=false

# Test mode settings
TEST_MODE=false
TEST_CONTENT_ANALYSIS=false
TEST_PLATFORM_STRATEGY=false

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env: cp .env.template .env
# 2. Fill in your actual API keys and settings
# 3. Never commit .env to version control
# 4. Restart your application after changing settings
# 5. Use strong, unique passwords and API keys
# 6. Enable authentication in production environments

