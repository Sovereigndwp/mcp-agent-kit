# Deployment Environment Variables
# Copy these to your deployment platform (Railway, Render, etc.)

# Server Configuration
NODE_ENV=production
PORT=3000

# Canva API (Required for design features)
CANVA_API_TOKEN=your_canva_token_here
CANVA_API_KEY=your_canva_key_here
CANVA_CLIENT_ID=your_canva_client_id_here
CANVA_CLIENT_SECRET=your_canva_client_secret_here

# Notion API (Optional - for content management)
NOTION_TOKEN=your_notion_token_here
NOTION_DB_ID=your_notion_database_id_here

# Optional API Keys (will use free tiers/defaults if not provided)
GITHUB_TOKEN=your_github_token_here
MEMPOOL_API_KEY=your_mempool_api_key_here

# Logging
LOG_LEVEL=info

# Cache settings
CACHE_ENABLED=true
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
